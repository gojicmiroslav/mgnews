<%= simple_form_for [:editor, @article] do |f| %>
	<%= f.input :category, collection: Category.all.map { |cat| [cat.name, cat.id]} %>
	<%= f.input :title %>
	<%= f.input :show_text, as: :text, label: 'Show Text' %>
	<%= f.input :body, as: :text %>
	<%= f.input :featured_image, as: :file %>
	<%= f.submit class: 'btn btn-primary' %>
<% end %>

<script>
$('#article_featured_image').bind('change', function(){
	var size_in_megabytes = this.files[0].size/1024/1024;
	if(size_in_megabytes > 5){
	  alert("Maximum file size is 5MB");
	}
});
</script>