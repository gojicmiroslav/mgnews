
<div class="row">
	<div class="col-sm-8 col-sm-offset-2">
		<div class="list-group">
  		<h3>Yours Articles</h3>
  		<br />
      <%= link_to "New Article", new_article_path, class: "btn btn-primary" %> </td>
      <hr />
			<div class="table-responsive">
  			<table class="table table-striped table-hover">
  				<thead>
  					<tr>
  						<th>Title</th>
  						<th>Body</th>
  						<th>Category</th>
  					</tr>
  				</thead>
  				<tbody>
    				<%#= render @artcles %>
    				<% @articles.each do |article| %>
							<td><%= article.title %></td>
							<td><%= article.body %></td>
							<td><%= article.category.name %></td>
							<td>
								<%= link_to "View",   article_path(article), class: "btn btn-primary" %> </td>
							<td>	
								<%= link_to "Edit",   edit_article_path(article), class: "btn btn-primary" %> </td>
							<td>
								<%= link_to "Delete", article, data: {
						  													confirm: 'Are you shure?'
																			}, method: :delete, class: "btn btn-danger" %> 
							</td>
						<% end %>
    			</tbody>
  			</table>
			</div>
		</div>
</div>
</div>