<tr>
	<td><%= article.title %></td>
	<td><%= truncate article.body, length: 50 %></td>
	<td><%= article.category.name %></td>
	<td><%= article.pubdate? ? 'Published' : 'Unpublished' %></td>
	<td><%= link_to image_tag(article.featured_image.url, size: "100x100"), article.featured_image.url %></td>
	<td><%= link_to "View", article_path(article), class: "btn btn-primary" %></td>
	<td><%= link_to "Edit", edit_article_path(article), class: "btn btn-primary" %></td>
	<td><%= link_to "Publish", edit_article_path(article), class: "btn btn-success" %></td>
	<td><%= link_to "Delete", article, data: {
											confirm: 'Are you shure?'
										}, method: :delete, class: "btn btn-danger" %> 
	</td>
</tr>
