<div class="row">
    <div class="col-xs-10 col-sm-6 col-sm-height col-sm-top">
      	<div class="inside inside-full-height">
        	<div class="content">
        		<h1><%= @article.title %></h1>
        		<p class="blog-post-meta">By 
        			<a href="mailto:<%= @article.user.email %>"><%= @article.user.email %></a> | 
        			<span class="text-muted"><%= @article.pubdate.to_date.to_formatted_s(:rfc822) %></span>
        		</p>
        		<hr />
				<p class="blog-main"><%= @article.body %></p>
        	</div>
  		</div>
  	</div>	
   
    <div class="col-xs-2 col-sm-2 col-sm-height col-sm-middle">
    	<%= render 'layouts/sidebar' %>
  	</div>
</div>

